---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Roboto+Mono" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body class="w-full mx-auto max-w-3xl">
		<div class="flex flex-col">
			<header>
				<div class="h-fit w-full mx-auto max-w-3xl">
					<div class="text-center py-16">
          	<div class="text-5xl font-mono font-[700]">readylayerone_</div>
						<p class="text-4xl font-mono font-[100]">Software Engineer</p>
        	</div>
				</div>
			</header>
			<slot />
		</div>
	</body>
</html>